<div class="container custom-container1 ">
    <div class="row justify-content-center">
        <div class="col mt-3 cust-col">
            <header class="new-header">
<h3>New Pet Form</h3>

            </header>

            <form class="mt-4 new-pet" data-id="{{user_id}}" action="/profile" method="POST"
                enctype="multipart/form-data">

                <div class="form-group">
                    <label for="pet-name"><strong>Pet Name</strong></label>
                    <input type="input" class="form-control pet-name" id="new-pet-name" name="name" aria-describedby="newPet"
                        placeholder="Pet Name">

                </div>
                
                
                <br>
                <label for="gender"><strong>Gender</strong> </label>
                <div class="form-check">
                    <input type="radio" class="form-check-input" value="Male" name="gender"> Male
                </div>
                <div class="form-check">
                    <input type="radio" class="form-check-input" value="Female" name="gender"> Female
                </div>
                <br>
                <div class="form-group">
                    <label for="age"><strong>Age</strong> </label>
                    <input type="input" class="form-control" id="age" name="age" aria-describedby="pet-age" placeholder="ie 4">

                </div>
                <br>
                <label for="pet-type"><strong>Type</strong></label>
                <div class="form-check">
                    <input type="radio" class="form-check-input" value="Dog" name="type"> Dog
                </div>
                <div class="form-check">
                    <input type="radio" class="form-check-input" value="Cat" name="type"> Cat
                </div>
                <div class="form-check">
                    <input type="radio" class="form-check-input" value="Horse" name="type"> Horse
                </div>

                <br>
                <div class="form-group">
                    <label for="breed"><strong>Breed</strong> </label>
                    <input type="input" class="form-control" id="pet-breed" name="breed"aria-describedby="breed"
                        placeholder="ie Lab">

                </div>
                <br>
                <div class="form-group">
                    <label for="vet-clinic"><strong>Veterinarian Clinic</strong></label>
                    <input type="input" class="form-control" id="vet-clinic" name="clinic" aria-describedby="vetClinic"
                        placeholder="">

                </div>
                <br>
                <div class="form-group">
                    <label for="vet-name"><strong>Veterinarian Name</strong></label>
                    <input type="input" class="form-control" id="vet-name" name="vet" aria-describedby="vetName" placeholder="">

                </div>
                <div class="hidden">
                <label for="pet-type"><strong>Type</strong></label>
                <div class="form-check">
                    <input type="radio" class="form-check-input" value="{{user_id}}" name="user_id" checked> {{{req.session.user_id}}}
                </div>
                </div>
                <br>
                                <div class="form-group">
                    <div><strong>Upload a photo</strong> </div>
                    <input type="file" name="file" id="input-files" class="form-control-file border" />

                </div>
                <br>

                <button type="submit" class="btn spec-btn">Submit</button>
            </form>
        </div>
    </div>
   

</div>







